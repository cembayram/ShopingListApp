<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shopping"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    android:background="@color/cardview_light_background">


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_id"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/itemAlisverisAdi"
        android:layout_width="374dp"
        android:layout_height="72dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:hint="Alışveriş Adı"
        android:textAlignment="center"
        android:padding="8dp"
        android:textSize="20sp" />


        <TextView
            android:id="@+id/itemUrunAdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="24dp"
            android:background="#0091EA"
            android:hint="Ürün Adı"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/itemUrunMiktari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="24dp"
            android:background="#0091EA"
            android:hint="Ürün Miktarı"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/itemUrunAdedi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="24dp"
            android:background="#0091EA"
            android:hint="Ürün Adedi"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/itemUrunFiyati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="24dp"
            android:background="#0091EA"
            android:hint="Ürün Fiyatı"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#fff" />


    <TextView
        android:id="@+id/itemUrunNot"
        android:layout_width="354dp"
        android:layout_height="41dp"
        android:layout_marginStart="5dp"
        android:hint="Ürün Not"
        android:background="@color/colorGreen"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />


</LinearLayout>

